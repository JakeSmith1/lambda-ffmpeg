{
    "parser": "babel-eslint",
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "new-cap": 0,
        "no-script-url": 0,
        "no-underscore-dangle": 0,
        "no-mixed-requires": [
            0,
            false
        ],
        "quotes": [
            2,
            "single"
        ],
        "strict": [
            1,
            "never"
        ],
        "semi": [
            2,
            "always"
        ],
        "curly": 1,
        "no-bitwise": 1,
        "vars-on-top": 0,
        "no-unused-vars": [
            2,
            {
                "vars": "all",
                "args": "after-used"
            }
        ],
        "guard-for-in": 1,
        "no-console": 0
    },
    "extends": [
        "eslint:recommended"
    ]
}
